<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.DashboardController"
            style="-fx-padding: 10;">

    <center>
        <SplitPane dividerPositions="0.6">
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Бронирования на сегодня" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Бронь сейчас" onAction="#handleReserveNow" prefWidth="100"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    <Button text="Бронь позже" onAction="#handleReserveLater" prefWidth="100"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    <Button text="Обновить" onAction="#handleRefresh" prefWidth="80"
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                </HBox>

                <TableView fx:id="todayReservationsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="resIdCol" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="resClientCol" text="Клиент"/>
                        <TableColumn fx:id="resTimeCol" text="Время"/>
                        <TableColumn fx:id="resGuestsCol" text="Гости" prefWidth="60"/>
                        <TableColumn fx:id="resTableCol" text="Столик"/>
                        <TableColumn fx:id="resStatusCol" text="Статус" prefWidth="100"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Клиент прибыл" onAction="#handleMarkAsActive" prefWidth="120"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                    <Button text="Завершить" onAction="#handleMarkAsCompleted" prefWidth="100"
                            style="-fx-background-color: #e67e22; -fx-text-fill: white;"/>
                    <Button text="Отменить" onAction="#handleCancelReservation" prefWidth="100"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                </HBox>
            </VBox>

            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Столики" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                </HBox>

                <TableView fx:id="availableTablesTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="tableIdCol" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="tableZoneCol" text="Зона"/>
                        <TableColumn fx:id="tableCapacityCol" text="Вместимость" prefWidth="80"/>
                        <TableColumn fx:id="tableStatusCol" text="Статус" prefWidth="100"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Освободить столик" onAction="#handleFreeTable" prefWidth="120"
                            style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>


</BorderPane>
