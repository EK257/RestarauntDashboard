<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.DatePicker?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ReservationController"
      spacing="10" style="-fx-padding: 20;">

    <Label text="Бронирования" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Дата:" style="-fx-padding: 5 0;"/>
        <DatePicker fx:id="dateFilter" promptText="Выберите дату"/>
        <Button text="Фильтровать" onAction="#handleFilterByDate"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button text="Сбросить" onAction="#handleResetFilter"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="reservationTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
            <TableColumn fx:id="clientCol" text="Клиент"/>
            <TableColumn fx:id="dateCol" text="Дата"/>
            <TableColumn fx:id="timeCol" text="Время"/>
            <TableColumn fx:id="durationCol" text="Длительность" prefWidth="80"/>
            <TableColumn fx:id="guestsCol" text="Гости" prefWidth="60"/>
            <TableColumn fx:id="statusCol" text="Статус" prefWidth="100"/>
            <TableColumn fx:id="tableCol" text="Столик"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Добавить бронирование" onAction="#handleAddReservation" prefWidth="160"
                style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button text="Редактировать" onAction="#handleEditReservation" prefWidth="100"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button text="Удалить" onAction="#handleDeleteReservation" prefWidth="100"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>

</VBox>
